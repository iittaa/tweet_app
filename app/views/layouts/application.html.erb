<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <div class="header-left">
    <li class=""><%= link_to("Tweet_App","/home/top") %></li>
    </div>
    <ul class="header-right">
      <% if @current_user %>
        <li class=""><%= link_to("#{@current_user.name}","/user/#{@current_user.id}/show") %></li>
        <li><%= link_to("ホーム","/post/index") %></li>
        <li><%= link_to("ユーザー一覧","/user/index") %></li>
        <li><%= link_to("新規投稿","/post/new") %></li>
        <li><%= link_to("ログアウト","/user/logout",{method: :post}) %></li>
      <% else %>
        <li class=""><%= link_to("ログイン","/user/login") %></li>
        <li class=""><%= link_to("新規登録","/user/new") %></li>
      <% end %>
    </ul>
  </header>
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <%= yield %>
  </body>
</html>
