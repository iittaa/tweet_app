<main>
<h1>ユーザー編集</h1>
  <div class="user-form">
    <%= form_tag("/user/#{@user.id}/update", {multipart: :true}) do %>
      <p>ユーザー名</p>
      <input type="text" name="name" value="<%= @user.name %>"></input>
      <p>メールアドレス</p>
      <input type="email" name="email" value="<%= @user.email %>"></input>
      <p>パスワード</p>
      <input type="password" name="password" value="<%= @user.password %>"></input>
      <p>画像</p>
      <input type="file" name="image" value="<%= @user.image_name %>"></input>
      <input type="submit" value="保存">
    <% end %>
  </div>
</main>